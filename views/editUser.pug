html
    body
        h1 Edit User
        form(method="post")
            div
                label#user-name Username
                input(type="text" name="user-name" value=user.username)
            div
                label#first-name First Name
                input(type="text" name="first-name" value=user.firstName)
            div
                label#last-name Last Name
                input(type="text" name="last-name" value=user.lastName)
            div
                label#email-address Email Address
                input(type="email" name="email-address" value=user.email)
            div
                label#age Age
                input(type="number" name="age" value=user.age)
            input(type="submit")